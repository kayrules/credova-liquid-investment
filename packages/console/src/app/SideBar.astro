/* eslint max-lines: 'off' */

import { IoStatsChartOutline, IoWalletOutline, IoClipboardOutline, IoCalendarOutline, IoDocumentTextOutline, IoSettingsOutline, IoOptionsOutline, IoCheckmarkCircleOutline, IoTimeOutline, IoBookmarkOutline } from 'react-icons/io5';

// Get current page path
const currentPath = Astro.url.pathname;

// Helper function to check if link is active
const isActive = (path: string) => {
	if (path === '/') {
		return currentPath === '/';
	}
	return currentPath.startsWith(path);
};

// Check if any marketplace submenu is active
const isMarketplaceActive = isActive('/receivables');
