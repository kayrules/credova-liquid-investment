---
import LayoutSidebar from '../app/LayoutSidebar.astro';
---

<LayoutSidebar>
	<div class="p-4 bg-white block sm:flex items-center justify-between border-b border-gray-200 lg:mt-1.5 dark:bg-gray-800 dark:border-gray-700">
		<div class="w-full mb-1">
			<div class="mb-4">
				<h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">
					Portfolio
				</h1>
				<p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
					As of {new Date().toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric', hour: '2-digit', minute: '2-digit' })}
				</p>
			</div>
		</div>
	</div>
	<div class="flex flex-col p-6">
		<div class="mb-6">
			<button
				type="button"
				class="px-5 py-2.5 text-sm font-medium text-white bg-primary-700 rounded-lg hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
			>
				Performance
			</button>
		</div>

		<!-- Portfolio Stats Grid -->
		<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-6">
			<div class="p-4 bg-primary-50 rounded-lg dark:bg-gray-700">
				<div class="text-3xl font-bold text-primary-900 dark:text-white">36</div>
				<div class="text-sm text-primary-700 dark:text-gray-300">Number of investments</div>
			</div>
			<div class="p-4 bg-primary-50 rounded-lg dark:bg-gray-700">
				<div class="text-3xl font-bold text-primary-900 dark:text-white">0</div>
				<div class="text-sm text-primary-700 dark:text-gray-300">Investments Ongoing</div>
			</div>
			<div class="p-4 bg-primary-50 rounded-lg dark:bg-gray-700">
				<div class="text-3xl font-bold text-primary-900 dark:text-white">216.75</div>
				<div class="text-sm text-primary-700 dark:text-gray-300">Expected returns(RM)</div>
			</div>
			<div class="p-4 bg-primary-50 rounded-lg dark:bg-gray-700">
				<div class="text-3xl font-bold text-primary-900 dark:text-white">12.27%</div>
				<div class="text-sm text-primary-700 dark:text-gray-300">Annualised portfolio performance (p.a)</div>
			</div>
		</div>

		<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4 mb-6">
			<div class="p-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
				<div class="text-3xl font-bold text-gray-900 dark:text-white">0.00</div>
				<div class="text-sm text-gray-500 dark:text-gray-400">Due unpaid this month(RM)</div>
			</div>
			<div class="p-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
				<div class="text-3xl font-bold text-gray-900 dark:text-white">0.00</div>
				<div class="text-sm text-gray-500 dark:text-gray-400">Expected Payments This Month(RM)</div>
			</div>
			<div class="p-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
				<div class="text-3xl font-bold text-gray-900 dark:text-white">0.00</div>
				<div class="text-sm text-gray-500 dark:text-gray-400">Outstanding principal (exposure)(RM)</div>
			</div>
			<div class="p-4 bg-white border border-gray-200 rounded-lg dark:bg-gray-800 dark:border-gray-700">
				<div class="flex justify-between items-start">
					<div>
						<div class="text-3xl font-bold text-gray-900 dark:text-white">0.00</div>
						<div class="text-sm text-gray-500 dark:text-gray-400">Current Principal Defaulted(RM)</div>
					</div>
				</div>
				<div class="flex space-x-4 mt-2">
					<div>
						<div class="text-sm font-medium text-gray-900 dark:text-white">0.00</div>
						<div class="text-xs text-gray-500 dark:text-gray-400">In Recovery</div>
					</div>
					<div>
						<div class="text-sm font-medium text-gray-900 dark:text-white">0.00</div>
						<div class="text-xs text-gray-500 dark:text-gray-400">Low or No Recovery</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Upcoming Payments Section -->
		<div class="bg-white rounded-lg border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
			<div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white">Upcoming Payments</h3>
			</div>
			<div class="p-6">
				<p class="text-sm text-gray-500 dark:text-gray-400">No upcoming payments at this time.</p>
			</div>
		</div>
	</div>
</LayoutSidebar>
