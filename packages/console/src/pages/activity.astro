---
import LayoutSidebar from '../app/LayoutSidebar.astro';
---

<LayoutSidebar>
	<div class="p-4 bg-primary-600 dark:bg-primary-700">
		<div class="max-w-3xl mx-auto">
			<h1 class="text-3xl font-bold text-white mb-2">My activity</h1>
			<p class="text-white">What have I been up to?</p>
		</div>
	</div>

	<div class="flex flex-col p-6 bg-gray-50 dark:bg-gray-900 min-h-screen">
		<div class="max-w-3xl mx-auto w-full">
			<!-- Filter Tabs -->
			<div class="mb-6">
				<div class="flex items-center space-x-2 text-sm mb-4">
					<span class="text-gray-600 dark:text-gray-400">Filter activity by</span>
				</div>
				<div class="flex space-x-4 border-b border-gray-200 dark:border-gray-700">
					<button class="px-4 py-2 font-medium text-gray-900 border-b-2 border-primary-600 dark:text-white">
						All
					</button>
					<button class="px-4 py-2 font-medium text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
						Deposits
					</button>
					<button class="px-4 py-2 font-medium text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
						Investments
					</button>
					<button class="px-4 py-2 font-medium text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white">
						Withdrawals
					</button>
				</div>
			</div>

			<!-- Activity List -->
			<div class="space-y-4">
				<!-- Activity Item 1 -->
				<div class="p-4 bg-white rounded-lg border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
					<div class="flex items-start">
						<div class="flex-shrink-0 mr-4">
							<div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center dark:bg-primary-900">
								<svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
									<path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
									<path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"></path>
								</svg>
							</div>
						</div>
						<div class="flex-1">
							<div class="flex items-center justify-between mb-1">
								<h4 class="text-sm font-semibold text-gray-900 dark:text-white">Investment</h4>
								<span class="text-xs text-gray-500 dark:text-gray-400">2024-10-23 12:05:29</span>
							</div>
							<p class="text-sm text-gray-600 dark:text-gray-400">
								You've made an RM200.00 investment to loan MBDF-24100493. Status is SUCCESS.
							</p>
						</div>
					</div>
				</div>

				<!-- Activity Item 2 -->
				<div class="p-4 bg-white rounded-lg border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
					<div class="flex items-start">
						<div class="flex-shrink-0 mr-4">
							<div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center dark:bg-primary-900">
								<svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
									<path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
									<path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"></path>
								</svg>
							</div>
						</div>
						<div class="flex-1">
							<div class="flex items-center justify-between mb-1">
								<h4 class="text-sm font-semibold text-gray-900 dark:text-white">Investment</h4>
								<span class="text-xs text-gray-500 dark:text-gray-400">2024-10-23 12:03:56</span>
							</div>
							<p class="text-sm text-gray-600 dark:text-gray-400">
								You've made an RM300.00 investment to loan MBDF-24100678. Status is SUCCESS.
							</p>
						</div>
					</div>
				</div>

				<!-- Activity Item 3 -->
				<div class="p-4 bg-white rounded-lg border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
					<div class="flex items-start">
						<div class="flex-shrink-0 mr-4">
							<div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center dark:bg-primary-900">
								<svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
									<path d="M4 4a2 2 0 00-2 2v1h16V6a2 2 0 00-2-2H4z"></path>
									<path fill-rule="evenodd" d="M18 9H2v5a2 2 0 002 2h12a2 2 0 002-2V9zM4 13a1 1 0 011-1h1a1 1 0 110 2H5a1 1 0 01-1-1zm5-1a1 1 0 100 2h1a1 1 0 100-2H9z" clip-rule="evenodd"></path>
								</svg>
							</div>
						</div>
						<div class="flex-1">
							<div class="flex items-center justify-between mb-1">
								<h4 class="text-sm font-semibold text-gray-900 dark:text-white">Investment</h4>
								<span class="text-xs text-gray-500 dark:text-gray-400">2024-10-23 12:02:33</span>
							</div>
							<p class="text-sm text-gray-600 dark:text-gray-400">
								You've made an RM200.00 investment to loan MBDF-24100289. Status is SUCCESS.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</LayoutSidebar>
