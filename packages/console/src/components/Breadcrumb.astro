---
// Get current page path
const currentPath = Astro.url.pathname;

// Map paths to breadcrumb labels
const pathLabels: Record<string, string> = {
	'/': 'Overview',
	'/receivables': 'Ar-Rahnu Marketplace',
	'/portfolio': 'Portfolio',
	'/activity': 'Activity',
	'/statements': 'Statements',
	'/settings': 'Settings'
};

// Generate breadcrumb items
let items = [];

if (currentPath === '/') {
	items = [{ label: 'Overview', url: null }];
} else {
	items = [
		{ label: 'Overview', url: '/' },
		{ label: pathLabels[currentPath] || currentPath.split('/').pop() || 'Page', url: null }
	];
}
---

<nav class="hidden lg:block lg:pl-3.5" aria-label="Breadcrumb">
	<ol class="inline-flex items-center space-x-1 md:space-x-3 mt-1">
		{items.map((item, index) => (
			<li class="inline-flex items-center">
				{index > 0 && (
					<svg
						class="w-6 h-6 text-gray-400"
						fill="currentColor"
						viewBox="0 0 20 20"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							fill-rule="evenodd"
							d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
							clip-rule="evenodd"
						></path>
					</svg>
				)}
				{item.url ? (
					<a
						href={item.url}
						class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-primary-600 dark:text-gray-400 dark:hover:text-white"
					>
						{index === 0 && (
							<svg
								class="w-4 h-4 mr-2"
								fill="currentColor"
								viewBox="0 0 20 20"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
							</svg>
						)}
						{item.label}
					</a>
				) : (
					<span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 dark:text-gray-400">
						{item.label}
					</span>
				)}
			</li>
		))}
	</ol>
</nav>
