---
import PageHeader from "@/components/PageHeader.astro";
import Shape from "@/components/Shape.astro";
import Base from "@/layouts/Base.astro";
import KB from "@/layouts/function-components/Faq.jsx";
import { getEntryBySlug } from "astro:content";

const faq = await getEntryBySlug("faq", "index");
const page_data = {
  ...faq.data,
  content: faq.body,
};
---

<Base
  title={faq.data.title}
  meta_title={faq.data.meta_title}
  description={faq.data.description}
  image={faq.data.image}
>
  <Shape />
  <section class="page-hero pt-16">
    <div class="container">
      <PageHeader page_data={page_data} />
    </div>
  </section>
  <!-- faq -->

  <KB client:load data={faq.data} />
</Base>
