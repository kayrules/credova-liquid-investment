---
import PageHeader from "@/components/PageHeader.astro";
import Shape from "@/components/Shape.astro";
import Base from "@/layouts/Base.astro";
import Cta from "@/layouts/partials/Cta.astro";
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import Products from "@/layouts/function-components/Products";
import { getSinglePage } from "@/lib/contentParser.astro";
import { AiFillCheckCircle } from "react-icons/ai";

const financingIndex = await getEntry("invoice-financing-i", "-index");
const { our_works } = financingIndex.data;
const posts = await getSinglePage("invoice-financing-i");
const page_data = {
  title: financingIndex.data.title,
  page_title: financingIndex.data.page_title,
  content: financingIndex.body,
};
---

<Base
  title={financingIndex.data.title}
  meta_title={financingIndex.data.meta_title}
  description={financingIndex.data.description}
  image={financingIndex.data.image}
>
  <Shape />

  <section class="page-hero pb-14 pt-16">
    <div class="container">
      <PageHeader page_data={page_data} />
    </div>
  </section>

  <section>
    <div class="container">
      {
        our_works.map((item: any, index: number) => (
          <div class="gx-5 row items-center first:mt-12">
            <div
              class={`lg:col-7 ${
                index % 2 === 0 ? "lg:order-1" : "lg:order-0"
              }`}
            >
              <div class="relative">
                <Image
                  class="w-full object-contain"
                  alt="service"
                  width={473}
                  height={286}
                  src={item.image}
                />
              </div>
            </div>
            <div
              class={`mt-6 lg:col-5 lg:mt-0 ${
                index % 2 === 0 ? "lg:order-0" : "lg:order-1"
              }`}
            >
              <div class="text-container">
                <h2 class="lg:text-4xl">{item.title}</h2>

                <ul class="mt-6 text-dark lg:-ml-4">
                  {item.list.map((list: any) => (
                    <li class="mb-2 flex items-center rounded px-4">
                      <AiFillCheckCircle className="mr-3 fill-primary text-white" />
                      {list}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <Products client:load posts={posts} />
  <Cta />
</Base>
