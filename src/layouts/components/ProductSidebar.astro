---
import { AiOutlineArrowRight } from "react-icons/ai";
const { posts, sidebar_content } = Astro.props;
---

<div class="career-single-sidebar mt-8 lg:col-4 lg:mt-0">
  {
    sidebar_content.enable && (
      <div class="mb-8 rounded-xl bg-white px-7 py-10 shadow-lg">
        <h5 class="h5">{sidebar_content.title}</h5>
        <p class="mt-4">{sidebar_content.content}</p>
        <a
          class="btn btn-primary mt-6 block w-full"
          href={sidebar_content.button.link}
        >
          {sidebar_content.button.label}
        </a>
      </div>
    )
  }
  {
    posts.slice(0, 2).map((item: any) => (
      <div class="mb-8 rounded-xl bg-slate-100 px-7 py-10 shadow-lg">
        <h5 class="h5">{item.data.title}</h5>
        <p class="mt-6">{item.data.excerpt}</p>
        <ul class="text-dark mt-6 flex flex-wrap items-center">
          <li class="my-1 mr-8">
            <a
              class="text-primary inline-flex items-center font-semibold"
              href={`/${item.data.parent}/${item.slug}`}
            >
              Read More
              <AiOutlineArrowRight className="ml-1.5 text-xl font-bold" />
            </a>
          </li>
        </ul>
      </div>
    ))
  }
</div>
